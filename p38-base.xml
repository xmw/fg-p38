<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Lockheed P 38 (YASim)</description>
    <author>BARANGER Emmanuel (3D/FDM), Michael Weber (mods)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.8</fuel-fraction>

    <startup>
      <splash-texture>p38-splash.png</splash-texture>
    </startup>

    <model>
      <path>Models/p38.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <sound>
      <path>Sounds/p38-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
        <int type="int" n="1">  0 </int>                                           <!--  1 immat -->
        <int type="int" n="2">  0 </int>                                           <!--  2 immat -->
        <int type="int" n="3">  0 </int>                                           <!--  3 immat -->
        <int type="int" n="4">  0 </int>                                           <!--  4 immat -->
        <int type="int" n="5">  0 </int>                                           <!--  5 immat -->
        <int type="bool" n="6" alias="/smoke/active"> 0 </int>                     <!--  6 start smoke -->
        <int type="int" n="7" alias="smoke/particlepersec"> 50 </int>              <!--  7 particlepersec -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
        <float n="2" alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3" alias="/smoke/colors/knob-red">1</float>                      <!-- 3 smoke mixer red setting -->
        <float n="4" alias="/smoke/colors/knob-green">1</float>                    <!-- 4 smoke mixer green setting -->
        <float n="5" alias="/smoke/colors/knob-blue">1</float>                     <!-- 5 smoke mixer blue setting -->
        <string n="9" type="string" />                                             <!-- string[9] reserved for bombable mode -->
      </generic>
    </multiplay>

    <flaps>
      <setting> 0.00 </setting>
      <setting> 0.25 </setting>
      <setting> 0.50 </setting>
      <setting> 0.75 </setting>
      <setting> 1.00 </setting>
    </flaps>

    <help>
      <title>Northrop p38</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close side windows</desc>
      </key>
    </help>

    <menubar include="Dialogs/p38-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
    </engines>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/p38-keyboard.xml"/>
  </input>

  <instrumentation>

    <adf>
      <name>adf</name>
      <number>0</number>
    </adf>
    <adf>
      <name>adf</name>
      <number>1</number>
    </adf>

    <adf n="0">
      <frequencies>
        <selected-khz>374</selected-khz>
        <standby-khz>203</standby-khz>
      </frequencies>
    </adf>


    <adf n="1">
      <mode type="string">adf</mode>
      <serviceable type="bool">true</serviceable>
      <power-btn type="bool">true</power-btn>
      <in-range type="bool">false</in-range>
      <operable type="bool">true</operable>
      <ident type="string"></ident>
      <ident-audible type="bool">true</ident-audible>
      <volume type="float">0.5</volume>
      <frequencies>
        <selected-khz>203</selected-khz>
        <standby-khz>374</standby-khz>
      </frequencies>
    </adf>
  </instrumentation>

  <nasal>
    <doors>
      <file>Nasal/doors.nas</file>
    </doors>
    <p38>
      <file>Nasal/liveries.nas</file>
      <file>Nasal/light.nas</file>
    </p38>

    <ADF462>
      <file>Aircraft/Generic/DualControl/Instruments/ADF-462/ctl62.nas</file>
    </ADF462>
    <VHF22>
      <file>Aircraft/Generic/DualControl/Instruments/VHF-22/ctl22.nas</file>
    </VHF22>
    <VIR32>
      <file>Aircraft/Generic/DualControl/Instruments/VIR-32/ctl32.nas</file>
    </VIR32>
    <KDI572>
      <file>Aircraft/Generic/DualControl/Instruments/KDI-572/kdi572.nas</file>
    </KDI572>
    <KI206>
      <file>Aircraft/Generic/DualControl/Instruments/KI-206/ki206.nas</file>
    </KI206>

    <dev>
      <script>
        setprop("/controls/switches/nav-lights", 1);
        setprop("/controls/switches/landing-lights", 0);
        setprop("/controls/switches/master-avionics", 1);
        setprop("/controls/switches/nav-lights", 1);
        setprop("/controls/switches/pitot-heat", 1);
        setprop("/controls/switches/strobe-lights", 1);
        setprop("/controls/switches/taxi-lights", 0);

        setprop("/systems/electrical/outputs/comm[0]", 24);
        setprop("/systems/electrical/outputs/comm[1]", 24);
        setprop("/systems/electrical/outputs/adf[1]", 24);

      </script>
    </dev>
  </nasal>

</PropertyList>

